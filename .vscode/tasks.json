// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "cmd.exe",
			"args": ["/c"]
		}
	},
	"tasks": [
		{
			"label": "npm: watch:esbuild",
			"type": "shell",
			"command": "npm",
			"args": ["run", "watch:esbuild"],
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			}
		},
		{
			"label": "npm: watch:lint",
			"type": "shell",
			"command": "npm",
			"args": ["run", "watch:lint"],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			}
		},
		{
			"label": "npm: watch:typecheck",
			"type": "shell",
			"command": "npm",
			"args": ["run", "watch:typecheck"],
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			}
		},
		{
			"label": "start-watch-tasks",
			"dependsOn": [
				"npm: watch:esbuild",
				"npm: watch:lint"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"problemMatcher": "$tsc"
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "build"
		}
	]
}