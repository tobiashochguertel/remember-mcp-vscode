// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "cmd.exe",
			"args": ["/c"]
		}
	},
	"tasks": [
		{
			"label": "npm watch",
			"type": "shell",
			"command": "npm",
			"args": ["run", "watch:esbuild"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "npm compile",
			"type": "shell",
			"command": "npm",
			"args": ["run", "compile"],
			"group": "build",
			"problemMatcher": "$tsc"
		},
		{
			"label": "npm lint",
			"type": "shell",
			"command": "npm",
			"args": ["run", "lint"],
			"group": "build"
		},
		
	]
}
