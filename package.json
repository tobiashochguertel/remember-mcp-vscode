{
  "name": "remember-mcp-vscode",
  "icon": "media/remember-new-logo-letter-black-128.png",
  "displayName": "Remember MCP",
  "description": "A VS Code extension that registers MCP servers with VS Code's built-in MCP system",
  "version": "0.0.12",
  "publisher": "nickeolofsson",
  "repository": {
    "type": "git",
    "url": "https://github.com/NiclasOlofsson/remember-mcp-vscode"
  },
  "engines": {
    "vscode": "^1.102.0",
    "node": ">=22.14.0",
    "npm": ">=9.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "memory",
    "server",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "remember-mcp-provider",
        "label": "Remember MCP Server"
      }
    ],
    "commands": [
      {
        "command": "remember-mcp.startServer",
        "title": "Register MCP Server",
        "category": "Remember MCP",
        "icon": "$(server-process)"
      },
      {
        "command": "remember-mcp.stopServer",
        "title": "Unregister MCP Server",
        "category": "Remember MCP",
        "icon": "$(stop)"
      },
      {
        "command": "remember-mcp.restartServer",
        "title": "Re-register MCP Server",
        "category": "Remember MCP",
        "icon": "$(refresh)"
      },
      {
        "command": "remember-mcp.showPanel",
        "title": "Show MCP Panel",
        "category": "Remember MCP",
        "icon": "$(window)"
      },
      {
        "command": "remember-mcp.showOutput",
        "title": "Show Output",
        "category": "Remember MCP",
        "icon": "$(output)"
      },
      {
        "command": "remember-mcp.clearUsageStats",
        "title": "Clear Usage Statistics",
        "category": "Remember MCP",
        "icon": "$(clear-all)"
      },
      {
        "command": "remember-mcp.showUsageHistory",
        "title": "Show Copilot Usage History",
        "category": "Copilot Usage History",
        "icon": "$(graph)"
      },
      {
        "command": "remember-mcp.clearUsageHistory",
        "title": "Clear Copilot Usage History",
        "category": "Copilot Usage History",
        "icon": "$(trash)"
      },
      {
        "command": "remember-mcp.exportUsageData",
        "title": "Export Usage Data",
        "category": "Copilot Usage History",
        "icon": "$(export)"
      },
      {
        "command": "remember-mcp.scanChatSessions",
        "title": "Scan Chat Sessions",
        "category": "Copilot Usage History",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "remember-mcp.scanChatSessions",
          "when": "view == copilot-usage-history-panel && remember-mcp.hasUsageData",
          "group": "navigation@1"
        },
        {
          "command": "remember-mcp.exportUsageData",
          "when": "view == copilot-usage-history-panel && remember-mcp.hasUsageData",
          "group": "navigation@2"
        },
        {
          "command": "remember-mcp.clearUsageHistory",
          "when": "view == copilot-usage-history-panel && remember-mcp.hasUsageData",
          "group": "navigation@3"
        }
      ]
    },
    "views": {
      "remember-mcp-container": [
        {
          "type": "webview",
          "id": "copilot-usage-history-panel",
          "name": "Copilot Usage History",
          "icon": "media/remember-new-logo-letter-black.svg"
        },
        {
          "type": "webview",
          "id": "remember-mcp-usage-panel",
          "name": "Copilot Usage",
          "icon": "media/remember-new-logo-letter-black.svg"
        },
        {
          "type": "webview",
          "id": "remember-mcp-panel",
          "name": "Server Control",
          "icon": "media/remember-new-logo-letter-black.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remember-mcp-container",
          "title": "Remember MCP",
          "icon": "media/remember-new-logo-letter-black.svg"
        }
      ]
    },
    "configuration": {
      "title": "Remember MCP",
      "properties": {
        "remember-mcp.server.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically register the MCP server when VS Code starts"
        },
        "remember-mcp.server.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable (deprecated - use server.command instead)"
        },
        "remember-mcp.server.command": {
          "type": "string",
          "default": "pipx run --system-site-packages --spec git+https://github.com/NiclasOlofsson/mode-manager-mcp.git mode-manager-mcp",
          "description": "Command to run the MCP server. Can use pipx, uv/uvx, docker, or direct command. Examples: 'uvx mode-manager-mcp', 'docker run ...', 'mode-manager-mcp' (if installed globally)"
        },
        "remember-mcp.sessionAnalysis.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable background analysis of Copilot sessions (Remember MCP)"
        },
        "remember-mcp.sessionAnalysis.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model family to use for session analysis (e.g., 'gpt-4o', 'gpt-4o-mini', 'gpt-4-turbo', 'o1-preview', 'claude-3.5-sonnet'). The extension will validate if the model is available through GitHub Copilot. Common models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4, o1-preview, o1-mini, claude-3.5-sonnet."
        },
        "remember-mcp.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "Log level for the extension. Changes take effect immediately without restarting VS Code.",
          "enumDescriptions": [
            "Trace - Most verbose, includes all debug details and execution traces",
            "Debug - Verbose logging for debugging purposes",
            "Info - General informational messages",
            "Warn - Warning messages only",
            "Error - Error messages only"
          ]
        },
        "remember-mcp.showScanSessionsNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when 'Scan Chat Sessions' button is clicked. The notification explains that scanning is not required as data updates automatically."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run generate-marketplace-readme && npm run package",
    "generate-marketplace-readme": "node scripts/generate-marketplace-readme.js",
    "monitor": "node scripts/monitor-copilot-sessions.js",
    "monitor:help": "node scripts/monitor-copilot-sessions.js --help",
    "clean": "rimraf out dist node_modules/.cache",
    "build": "tsx .esbuild.ts",
    "compile": "tsx .esbuild.ts --dev",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "tsx .esbuild.ts --watch --dev",
    "watch:lint": "nodemon --watch src --ext ts,tsx --exec \"eslint src --fix --cache\"",
    "watch:typecheck": "tsc --noEmit --watch --project tsconfig.json",
    "package": "tsx .esbuild.ts",
    "lint": "eslint src",
    "lint-staged": "eslint --max-warnings=0",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "vitest run",
    "test:unit": "vitest run src/test/unit",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bump-version": "npm version patch",
    "package:marketplace": "npm run bump-version && npm run generate-marketplace-readme && vsce package --readme-path README_marketplace.md",
    "publish:marketplace": "npm run package:marketplace && vsce publish --readme-path README_marketplace.md",
    "copy-libs": "npx cpy node_modules/chart.js/dist/chart.umd.js media/libs/",
    "gen:ai-test-data": "tsx ai-test-data/generate_llm_classification_datasets.ts"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^3.1.0",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "cpy-cli": "^5.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "chart.js": "^4.5.0",
    "uuid": "^10.0.0"
  }
}
